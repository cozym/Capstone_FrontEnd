<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C8C8C8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                >
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingTop="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicextrabold"
                    android:text="사용자 이름"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:paddingTop="30dp"
                    android:textColor="@color/black"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임 바꾸기"
                    android:textColor="#73ABFF"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/drawable_resize4"
                    android:id="@+id/nick_rewrite"></Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                >
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicextrabold"
                    android:text="내 정보"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_marginHorizontal="10dp"
                    />
                <View
                    android:background="#C8C8C8"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="#c8c8c8"
                    >


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="이름"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#F1F1F1"
                            android:layout_margin="1px"
                            android:padding="3dp">
                        </TextView>
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_weight="7"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="이름입니다"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="이메일"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#F1F1F1"
                            android:layout_margin="1px"
                            android:padding="3dp">
                        </TextView>
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_weight="7"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="aaa@kyonggi.ac.kr"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_margin="1px"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="3"
                            android:background="#F1F1F1"
                            android:fontFamily="@font/nanumgothic"
                            android:gravity="center|left"
                            android:padding="3dp"
                            android:paddingLeft="10dp"
                            android:text="등록 도서"
                            android:textSize="18sp"></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="7"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="2"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="3"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="대여 중"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#F1F1F1"
                            android:layout_margin="1px"
                            android:padding="3dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="7"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="0"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingBottom="30dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicextrabold"
                    android:text="도서 대여 기록"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_marginHorizontal="10dp"
                    />
                <View
                    android:background="#C8C8C8"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <TableLayout
                    android:id="@+id/mypage_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="#c8c8c8"
                    >


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="9">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1px"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="7"
                            android:background="#F1F1F1"
                            android:fontFamily="@font/nanumgothic"
                            android:gravity="center|left"
                            android:padding="3dp"
                            android:paddingLeft="10dp"
                            android:text="도서명"
                            android:textSize="18sp"></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="대여일"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="반납일"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="9">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="7"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="수학의 정석(상)"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#F1F1F1"
                            android:layout_margin="1px"
                            android:padding="3dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="2022-05-15"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:text="2022-05-16"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nanumgothic"
                            android:background="#ffffff"
                            android:layout_margin="1px"
                            android:padding="3dp">
                            >
                        </TextView>
                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>




