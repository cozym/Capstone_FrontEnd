<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="썸네일"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/thumbnailButton"
            android:layout_width="378dp"
            android:layout_height="170dp"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임 이름"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/groupNameInput"
            android:layout_width="380dp"
            android:layout_height="42dp"
            android:hint="모임 이름을 입력해주세요" />

        <TextView
            android:id="@+id/groupDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임 설명"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/groupDescriptionInput"
            android:layout_width="380dp"
            android:layout_height="42dp"
            android:hint="모임 설명을 입력해주세요" />

        <TextView
            android:id="@+id/groupHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해시태그"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/groupHashtagInput"
            android:layout_width="380dp"
            android:layout_height="42dp"
            android:hint="해시태그를 입력해주세요" />

        <TextView
            android:id="@+id/open_yn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 공개 여부"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <RadioButton
                android:id="@+id/reveal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공개" />

            <RadioButton
                android:id="@+id/conceal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비공개" />
        </RadioGroup>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="등록" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>