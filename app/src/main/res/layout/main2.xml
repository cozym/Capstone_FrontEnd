<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radius1"
                android:orientation="horizontal"
                android:paddingTop="50dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/searchbar"
                    android:drawableStart="@drawable/drawable_resize3"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/nanumgothic"
                    android:padding="8dp"
                    android:text="검색어를 입력해주세요."
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_thick"
                    android:textSize="20dp"
                    android:id="@+id/to_search"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/main_mainlist"
                    android:id="@+id/to_mainList"></Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="150dp"
                        android:background="@drawable/main_mygroup"
                        android:layout_marginRight="5dp"
                        android:id="@+id/to_myGroup"></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="150dp"
                        android:background="@drawable/main_mybook"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/to_myBook"></Button>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/main_gps"
                    android:layout_marginTop="10dp"
                    android:id="@+id/to_GPS"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/main_mypage2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/to_mypage"></Button>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

</androidx.constraintlayout.widget.ConstraintLayout>

